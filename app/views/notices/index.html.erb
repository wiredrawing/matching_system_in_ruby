<section>
  <% if @logs.length > 0 then %>
    <div class="box">
      <% @logs.each do |log| %>
        <a href="" class="message_list">
          <div class="message_list1">
            <% if log.from_member.showable_images.length > 0 %>
              <img src="<%= log.from_member.showable_images.first.image_url() %>">
            <% else %>
              <img src="/images/sample_user.jpg">
            <% end %>
          </div>
          <div class="message_list2">
            <p><%= log.created_at.strftime("%Y年%m月%d日 %H時%M分%S秒") %></p>
            <p><%= log.from_member.display_name %>さん <%= log.action_name %></p>
          </div>
        </a>
      <% end %>
    </div>
    <!--box-->
  <% end %>
</section>
